##---------- Keybindings for bspwm ----------##

# Terminal (alacritty)
super + Return
	alacritty

# Terminal (floating)
super + shift + Return
	alacritty --class='alacritty-float,alacritty-float'

##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
alt + F1
	bspCustomLaunch

alt + space
	rofi -show calc -modi calc -no-show-match -no-sort -theme ~/.config/polybar/scripts/rofi/calculator.rasi

super + semicolon
	emoji-picker

# Rofi Power Menu
super + x
	~/.config/polybar/scripts/powermenu.sh &

# Cheat Sheet
super + q
	feh --borderless --auto-zoom Pictures/BSPWMKeyboardCheatSheet.png

##---------- Applications ----------##

# Launch Apps
super + shift + {w,e}
	{firefox,geany}

# Launch File Manager
super + shift + f
	thunar

# Launch Chrome
super + backslash
	google-chrome-stable -no-default-browser-check

# Launch Discord
super + d
	discord

# Terminal Apps
ctrl + alt + {v,r,h}
	alacritty -e {vim,ranger,htop}

# Color Picker
super + p
	bspcolorpicker

##---------- System Keys ----------##

# Take a screenshot
Print
	bspscreenshot --now
	
# Take screenshot in 5 second
alt + Print	
	bspscreenshot --in5

# Take screenshot in 10 second
shift + Print	
	bspscreenshot --in10

# Take screenshot of active window
ctrl + Print
	bspscreenshot --win

# Custom snap shot area
ctrl + shift + s
	bspscreenshot --area

# Brighness control
XF86MonBrightness{Up,Down}
	backlight_control {+10, -10}
	
# Speaker Volume control
XF86Audio{RaiseVolume,LowerVolume}
	bspvolume{ --inc, --dec}

# Mic Volume control
XF86Audio{Mute,MicMute}
	bspvolume{ --toggle, --toggle-mic}
	
# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

# Custom Music Volume
control + shift + {plus, minus}
	mpc volume {+10,-10}


##---------- Bspwm ----------##

# Hide/Unhide Window
super + shift + h
	bspwinmask

# Close App
super + {_,shift + }c
	bspc node -{c,k}

# kill window
ctrl + alt + Escape
    xkill

# Quit/Restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}
	
# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch workspace or Send focused Node to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-8}' '--follow'

# Send focused Node to workspace directionally
ctrl + alt + shift + {Left,Right}
	bspc node -d {prev,next} '--follow'

# Change focus of the Node or Swap Nodes
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Move floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Expanding windows
#super + control + {Left,Right,Up,Down}
#	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
# Shrinking windows
#super + alt + {Left,Right,Up,Down}
#	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}

# Split horizontal, vertical or cancel
super + {h,v,q}
	bspc node -p {east,south,cancel}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Lock
ctrl + alt + l
	lock

# Toggle Fullscreen
super + f
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + shift + space
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last
	
ctrl + shift + {braceright, braceleft}
	bspc config window_gap {$(new_gap=$(( $(bspc config window_gap) + 5 )); (( new_gap < 0 )) && echo 0 || echo $new_gap), $(new_gap=$(( $(bspc config window_gap) - 5 )); (( new_gap < 0 )) && echo 0 || echo $new_gap)}

##---------- EOF ----------##
